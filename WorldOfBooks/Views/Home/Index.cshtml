@model IndexViewModel
@{
    ViewData["Title"] = "Welcome!";
}
@{
    var books = Model.Books;
    var firstBook = books.Any() ? books[0] : null;
    var secondBook = books.Count > 1 ? books[1] : null;
    var thirdBook = books.Count > 2 ? books[2] : null;
}
@if (!books.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for Books!</h1>
        <p class="lead">There are no books in the system currentky available so why you don't add one?</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Books"asp-action="Add" class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
        </p>
    </div>
}
<div id="carouselExampleControls" class="carousel slide mt-3" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstBook != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstBook.ImageUrl" alt="@firstBook.Book @firstBook.Author">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@firstBook.Id">@firstBook.Book @firstBook.Author></a></h5>
                </div>
            </div>
        }

        @if (secondBook != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@secondBook.ImageUrl" alt="@secondBook.Book @secondBook.Author">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@secondBook.Id">@secondBook.Book @secondBook.Author></a></h5>
                </div>
            </div>
        }
        @if (thirdBook != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@thirdBook.ImageUrl" alt="@thirdBook.Book @thirdBook.Author">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Books" asp-action="Details" asp-route-id="@thirdBook.Id">@thirdBook.Book @thirdBook.Author></a></h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="mb-1"></div>
    <div class="jumbotron">
        <div class="row">
            <h2 class="col-md-5 text-center">
                @Model.TotalBooks Books</h2>
            <h2 class="col-md-5 text-center">
                @Model.TotalUsers Users</h2>
            </div>
        </div>

@model AddBookFormModel
@{ 
    ViewData["Title"] = "Add Book";
}
<div class="container"> 
    <div class="row">
        <div class="=col-12">
            <h2>Add Book</h2>
            <form>
                <div class="form-group">
                    <label asp-for="NameOfBook"></label>
                    <input asp-for="NameOfBook" class="form-control" placeholder="Name of Book">
                    <span asp-validation-for="NameOfBook" class="=small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author"></label>
                    <input asp-for="Author" class="form-control" placeholder="Name of Author">
<span asp-validation-for="Author" class="=small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" rows="4" class="form-control" placeholder="Info for Book and Author"> </textarea>
                    <span asp-validation-for="Description" class="=small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="" placeholder="Image Url">
                    <span asp-validation-for="ImageUrl" class="=small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year"></label>
                    <input asp-for="Year" class="form-control" placeholder="@DateTime.UtcNow.Year">
                    <span asp-validation-for="Year" class="=small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId"class="form-control">
@foreach (var category in Model.Categories)
{
    <option value="@category.Id">@category.Name</option>
}
                    </select>
                </div>
                <input class="btn btn-primary"type="submit"value="Save"/>
            </form>
        </div>
    </div>
</div>